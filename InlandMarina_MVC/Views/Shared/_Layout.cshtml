<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InlandMarina_MVC.styles.css" asp-append-version="true" />
</head>
<body class="background-image">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white fs-3" asp-area="" asp-controller="Home" asp-action="Index">Inland Marina</a>
                <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white fs-5" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white fs-5" asp-area="" asp-controller="Slip" asp-action="List">Available Slips</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white fs-5" asp-area="" asp-controller="MySlips" asp-action="Index">My Slips</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white fs-5" asp-area="" asp-controller="Lease" asp-action="Index">Lease</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                    <a class="nav-link text-white fs-5" asp-area="" asp-controller="Registration" asp-action="Create">Registration</a>
                </div>
                </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 bg">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white bg-primary">
        <div class="container text-center home-paragraph">
            Copyright © @DateTime.Today.Year  - Inland Marina&nbsp All rights reserved.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
